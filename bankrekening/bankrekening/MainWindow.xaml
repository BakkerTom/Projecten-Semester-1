        <Button x:Name="btnOpnemen1" Content="Opnemen" HorizontalAlignment="Left" Margin="135,225,0,0" VerticalAlignment="Top" Width="96" Height="23" Click="btnOpnemen1_Click"/>
        <Button x:Name="btnStorten1" Content="Storten" HorizontalAlignment="Left" Margin="135,253,0,0" VerticalAlignment="Top" Width="96" Height="23" Click="btnStorten1_Click"/>
